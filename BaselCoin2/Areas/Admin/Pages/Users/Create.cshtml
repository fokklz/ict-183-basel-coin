@page
@model BaselCoin2.Areas.Admin.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userToCreate.UserName" class="control-label"></label>
                <input asp-for="userToCreate.UserName" class="form-control" />
                <span asp-validation-for="userToCreate.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userToCreate.Email" class="control-label"></label>
                <input asp-for="userToCreate.Email" class="form-control" />
                <span asp-validation-for="userToCreate.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userToCreate.Password" class="control-label"></label>
                <input asp-for="userToCreate.Password" class="form-control" />
                <span asp-validation-for="userToCreate.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userToCreate.Role" class="control-label"></label>
                <select asp-for="userToCreate.Role" asp-items="Model.Roles" class="form-control"></select>
                <span asp-validation-for="userToCreate.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-page="Index">Back to List</a>
</div>

